<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ../public/index.html %>
    <title>Messages</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layouts.css" type="text/css" />
    <link rel="stylesheet" href="/styles/messages.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/messenger.js"></script>
</head>

<body>

  <!-- CHAT CONTENT -->
<div class="chat">
  <div class="chat-toolbar">
    <div class="chat-buyer">
      <img class="avatar" src="/images/avatars/james.jpg">
      <span>James Bond</span>
    </div>
  </div>
  <div class="chat-content">
    <div id="chat-messages">
    </div>
  </div>

  <!-- CHAT FOOTER -->
  <div class="chat-footer">

    <!-- REPLY FORM -->
    <div class="reply-form">
      <textarea id="message-text" name="message" placeholder="Type your message"></textarea>
      <button class="send" type="submit">
        <i class="fa fa-paper-plane" aria-hidden="true"></i>
      </button>
    </div>
    <!-- / REPLY FORM -->
  </div>

  <!-- CHAT FOOTER -->
</div>
</body>

</html>
